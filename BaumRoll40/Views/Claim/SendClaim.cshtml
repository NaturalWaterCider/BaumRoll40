@model BaumRoll40.Models.ClaimViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container mt-2">
        <h5>お問い合わせフォーム</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-6", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, 5, 50, new { @class = "form-control col-10", maxlength = "499", requierd = "requierd" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
            <span id="tagError" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="send" value="送信" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


@section Scripts{


    <script type="text/javascript">
        $("form").submit(function () {
            var tagstr = $("#Content").val();
            var result = tagstr.match("<(\".*?\"|'.*?'|[^'\"])*?>");

            if (result != null) {
                $("#tagError").text("タグは入れないでね");
                $("#result").text("");
                return false;
            }
        });

    </script>

}